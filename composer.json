{
    "name": "shimoning/laravel-utilities",
    "description": "Utilities for Laravel",
    "minimum-stability": "stable",
    "type": "library",
    "version": "0.5.5",
    "license": "MIT",
    "authors": [
        {
            "name": "Shimon Haga",
            "email": "shimon.haga@shimoning.com",
            "homepage": "https://shimoning.com"
        }
    ],
    "keywords": [
        "laravel",
        "utility",
        "seeder",
        "validation",
        "rule",
        "hiragana",
        "katakana",
        "database",
        "mail",
        "logger",
        "boolean"
    ],
    "require": {
        "php": "^7.1 || ^8.0",
        "illuminate/database": "5.8.* || ^6 || ^7 || ^8",
        "illuminate/events": "5.8.* || ^6 || ^7 || ^8",
        "illuminate/mail": "5.8.* || ^6 || ^7 || ^8",
        "illuminate/support": "5.8.* || ^6 || ^7 || ^8",
        "illuminate/translation": "5.8.* || ^6 || ^7 || ^8",
        "illuminate/validation": "5.8.* || ^6 || ^7 || ^8",
        "hashids/hashids": "^4.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^7 | ^8 | ^9",
        "php-mock/php-mock": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "Shimoning\\LaravelUtilities\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Shimoning\\LaravelUtilities\\UtilityServiceProvider"
            ]
        }
    },
    "scripts": {
        "test": [
            "vendor/bin/phpunit"
        ]
    }
}
